<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="public" template="forum_post_thread" modification_key="bs_aib_forum_post_thread_ai_bots_toggle" description="Add AI bots switch button to post thread page" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/<xf:captcharow.*?\/>/s]]></find>
    <replace><![CDATA[<xf:if is="$thread.canToggleAiBots()">
	<xf:checkboxrow>
		<xf:option name="bs_aib_enable_bots"
				   label="{{ phrase('bs_aib_enable_ai_bots') }}"
				   checked="{$thread.bs_aib_enable_bots}" />
	</xf:checkboxrow>
</xf:if>
$0]]></replace>
  </modification>
  <modification type="public" template="thread_view" modification_key="bs_aib_thread_view_ai_bots_switch" description="Add AI bots switch button" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<!--[XF:thread_tools_menu:before_footer]-->]]></find>
    <replace><![CDATA[<xf:if is="$thread.canToggleAiBots()">
	<a href="{{ link('threads/toggle-ai-bots', $thread) }}"
	   class="menu-linkRow"
	   data-xf-click="switch"
	   data-menu-closer="true">
		<xf:if is="!$thread.bs_aib_enable_bots">
			{{ phrase('bs_aib_enable_ai_bots') }}
			<xf:else />
			{{ phrase('bs_aib_disable_ai_bots') }}
		</xf:if>
	</a>
</xf:if>
$0]]></replace>
  </modification>
</template_modifications>
