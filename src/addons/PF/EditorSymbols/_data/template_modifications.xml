<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="public" template="editor" modification_key="pf_es_editor" description="Add the js editor file" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<!--[XF:include_js]-->]]></find>
    <replace><![CDATA[<xf:js src="pf/editorsymbols/editor.js" />
	$0]]></replace>
  </modification>
  <modification type="public" template="editor" modification_key="pf_es_editor_2" description="Add symbols menu definition" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:if is="is_editor_capable()">]]></find>
    <replace><![CDATA[$0
	<script class="js-editorPfEsSymbolsMenu" type="text/template">
		<div class="menu menu--symbols" data-menu="menu" aria-hidden="true"
			data-href="{{ link('editor/pf-es-symbols') }}"
			data-load-target=".js-editorPfEsSymbolsMenuBody">
			<div class="menu-content">
				<div class="js-editorPfEsSymbolsMenuBody">
					<div class="menu-row">{{ phrase('loading...') }}</div>
				</div>
			</div>
		</div>
	</script>]]></replace>
  </modification>
  <modification type="public" template="editor.less" modification_key="pf_es_editor_less" description="Add less code to editor less" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/$/]]></find>
    <replace><![CDATA[{{ include('pf_es_editor_symbols.less') }}]]></replace>
  </modification>
</template_modifications>
