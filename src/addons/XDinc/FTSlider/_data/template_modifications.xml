  <modification type="public" template="PAGE_CONTAINER" modification_key="FTSlider_above_breadcrumb" description="Featured Thread Slider Above Breadcrumb" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:ad position="container_breadcrumb_top_above" />]]></find>
    <replace><![CDATA[<xf:if is="{$xf.options.FTSlider_position} == 'abovebreadcrumb' &&
						{$xf.options.FTSlider_enable} &&
					    $template == 'forum_list'">
                 <xf:widget key="XD_FTSlider_widget" />
           </xf:if>  

$0]]></replace>
