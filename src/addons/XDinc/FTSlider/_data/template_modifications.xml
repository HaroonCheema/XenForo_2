  <modification type="public" template="PAGE_CONTAINER" modification_key="FTSlider_copyright" description="FTSlider Copyright" execution_order="100" enabled="1" action="str_replace">
    <find><![CDATA[{{ phrase('extra_copyright') }}]]></find>
