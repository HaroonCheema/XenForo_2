  <modification type="public" template="PAGE_CONTAINER" modification_key="FTSlider_below_breadcrumb" description="Featured Thread Slider Below Breadcrumb" execution_order="20" enabled="1" action="str_replace">
    <find><![CDATA[<xf:ad position="container_breadcrumb_top_below" />]]></find>
    <replace><![CDATA[<xf:if is="{$xf.options.FTSlider_position} == 'belowbreadcrumb' &&
						{$xf.options.FTSlider_enable} &&
					    $template == 'forum_list'">
                 <xf:widget key="XD_FTSlider_widget" />
            </xf:if>  
