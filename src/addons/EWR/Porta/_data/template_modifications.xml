<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="public" template="PAGE_CONTAINER" modification_key="EWRporta_PAGE_CONTAINER_copyright" description="{{ phrase('extra_copyright') }}" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[{{ phrase('extra_copyright') }}]]></find>
    <replace><![CDATA[$0
<div class="porta-copyright">
	<a href="https://xenforo.com/community/resources/6023/"
		target="_blank">XenPorta 2 PRO</a> &copy; Jason Axelrod of
	<a href="https://8wayrun.com/" target="_blank">8WAYRUN</a>
</div>]]></replace>
  </modification>
  <modification type="public" template="forum_list" modification_key="EWRporta_forum_list_widgets" description="WIDGET: adds split widgets around the forum list" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:widgetpos id="forum_list_above_nodes" />
<xf:macro name="node_list" arg-children="{$nodeTree}" arg-extras="{$nodeExtras}" />
<xf:widgetpos id="forum_list_below_nodes" />]]></find>
    <replace><![CDATA[<xf:css src="EWRporta.less" />
<div class="porta-forumlist-above-split porta-widgets-split">
	<xf:widgetpos id="ewr_porta_forumlist_above_split" />
</div>
$0
<div class="porta-forumlist-below-split porta-widgets-split">
	<xf:widgetpos id="ewr_porta_forumlist_below_split" />
</div>]]></replace>
  </modification>
  <modification type="public" template="forum_post_thread" modification_key="EWRporta_post_thread_options" description="MACRO: adds promotion option to thread create" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:macro template="helper_thread_options" name="thread_status" arg-thread="{$thread}" />]]></find>
    <replace><![CDATA[$0
<xf:macro template="EWRporta_article_macros" name="thread_promote"
	arg-thread="{$thread}" />]]></replace>
  </modification>
  <modification type="public" template="post_article_macros" modification_key="EWRporta_post_article_macros_author" description="ARTICLE: removes author attribution" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[#<aside class="message-articleUserInfo">.+?</aside>#s]]></find>
    <replace><![CDATA[<xf:if is="!$thread->showPortaAuthor()">
	$0
</xf:if>]]></replace>
  </modification>
  <modification type="public" template="post_macros" modification_key="EWRporta_post_macros_attachments" description="ARTICLE: removes attachment gallery" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[#<xf:if is="\$post.attach_count">.+?</xf:if>#s]]></find>
    <replace><![CDATA[<xf:if is="!$post->isFirstPost() OR !$thread->isPortaArticle() OR $thread->showPortaAttach()">
	$0
</xf:if>]]></replace>
  </modification>
  <modification type="public" template="post_macros" modification_key="EWRporta_post_macros_comment_deleted" description="COMMENTS: simplifies deleted to comment" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[message--deleted]]></find>
    <replace><![CDATA[{{ !$thread->showPortaComments() ?: 'message--simple' }} $0]]></replace>
  </modification>
  <modification type="public" template="thread_view" modification_key="EWRporta_thread_view_description" description="EXTENSION: description -&gt; ewr_porta_description" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:description meta="false">]]></find>
    <replace><![CDATA[$0
	<xf:extension name="ewr_porta_description"></xf:extension>]]></replace>
  </modification>
  <modification type="public" template="thread_view" modification_key="EWRporta_thread_view_tools" description="MACRO: adds promotion links to thread tools" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<!--[XF:thread_tools_menu:before_footer]-->]]></find>
    <replace><![CDATA[$0
<xf:macro template="EWRporta_article_macros" name="thread_tools"
	arg-thread="{$thread}" arg-article="{$article}" arg-feature="{$feature}" />]]></replace>
  </modification>
</template_modifications>
