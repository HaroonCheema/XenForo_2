{
    "template": "PAGE_CONTAINER",
    "description": "Add the ad macros template in the footer.",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "/<footer.*?>/",
    "replace": "$0\n<xf:if contentcheck=\"true\">\n\t<div class=\"p-footer-inner\">\n\t\t<xf:contentcheck>\n\t\t\t<xf:macro template=\"siropu_ads_manager_ad_macros\" name=\"ad_unit\" arg-position=\"footer\" />\n\t\t</xf:contentcheck>\n\t</div>\n</xf:if>"
}