				/>
</xf:form>
<xf:macro
		  name="table_list"
		  arg-data="!"
		  >
	<xf:datarow rowtype="header">
		<xf:cell> {{ phrase('fs_email_logs_no') }} </xf:cell>
		<xf:cell> {{ phrase('fs_email_logs_from') }} </xf:cell>
		<xf:cell> {{ phrase('fs_email_logs_to') }} </xf:cell>
		<xf:cell class="dataList-cell--min"></xf:cell>
