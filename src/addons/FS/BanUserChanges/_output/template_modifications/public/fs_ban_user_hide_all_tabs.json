{
    "template": "member_view",
    "description": "fs_ban_user_hide_all_tabs",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "/<span class=\"hScroller-scroll\">.*?<\\/span>/is",
    "replace": "<xf:if is=\"$user.is_banned AND !$xf.visitor.hasPermission('fs_ban_watch_profile', 'other_can_check')\">\n\t<span class=\"hScroller-scroll banUserHideTabs\">\n\n\t\t<a href=\"{{ link('members/about', $user) }}\"\n\t\t   class=\"tabs-tab banUserHideTabs\"\n\t\t   id=\"about\"\n\t\t   role=\"tab\">{{ phrase('about') }}</a>\n\n\t</span>\n\t<xf:else />\n\t$0\n</xf:if>"
}