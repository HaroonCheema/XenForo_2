<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="public" template="PAGE_CONTAINER" modification_key="fs_awc_reviews_add_profile" description="fs_awc_reviews_add_profile" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/<xf:if is="\$xf\.visitor\.is_admin">.*?<\/xf:if>/is]]></find>
    <replace><![CDATA[$0

<xf:if contentcheck="true">
	<a class="p-staffBar-link menuTrigger" data-xf-click="menu" data-xf-key="alt+m" role="button" tabindex="0" aria-expanded="false" aria-haspopup="true">{{ phrase('fs_amc_review_profile') }}</a>
	<div class="menu" data-menu="menu" aria-hidden="true">
		<div class="menu-content">
			<h4 class="menu-header">{{ phrase('fs_amc_review_profile_tools') }}</h4>
			<xf:contentcheck>
				<xf:if is="$xf.visitor.user_id">
					<a href="{{ link('members', $xf.visitor) }}" class="menu-linkRow">{{ phrase('fs_amc_reviews_your_profile') }}</a>
				</xf:if>
				<xf:if is="$xf.visitor.user_id">
					<a href="{{ link('account/account-details') }}" class="menu-linkRow">{{ phrase('fs_amc_reviews_edit_profile') }}</a>
				</xf:if>
			</xf:contentcheck>
		</div>
	</div>
</xf:if>

<xf:if is="$xf.visitor.user_id">
	<a href="{{ link('account/bookmarks') }}" class="p-staffBar-link" >{{ phrase('fs_amc_reviews_favourite') }}</a>
</xf:if>]]></replace>
  </modification>
  <modification type="public" template="account_bookmarks" modification_key="fs_amc_review_bookmarks_to_favourites" description="fs_amc_review_bookmarks_to_favourites" execution_order="10" enabled="1" action="str_replace">
