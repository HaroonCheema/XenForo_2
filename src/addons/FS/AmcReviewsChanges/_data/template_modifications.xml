  <modification type="public" template="extra.less" modification_key="fs_amc_review_item_favourite_color" description="fs_amc_review_item_favourite_color" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/^(.*)$/is]]></find>
    <replace><![CDATA[$0

.itemFavouriteClr
{
color: #1d9f1d !important;
}

.itemFavouriteClrBtn
{
background-color: #1d9f1d !important;
color: #fff !important;
}]]></replace>
  </modification>
  <modification type="public" template="post_macros" modification_key="fs_amc_post_macros_add_to_favourite" description="fs_amc_post_macros_add_to_favourite" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/<xf:macro template="bookmark_macros" name="link".*?arg-showText="{{ false }}"\/>/is]]></find>
    <replace><![CDATA[<xf:macro template="bookmark_macros" name="link"
		  arg-content="{$post}"
		  arg-class="message-attribution-gadget bookmarkLink--highlightable itemFavouriteClr"
		  arg-confirmUrl="{{ link('posts/bookmark', $post) }}"
		  arg-showText="{{ true }}"
		  arg-editText="{{ phrase('fs_amc_favourite_edit') }}"
		  arg-addText="{{ phrase('fs_amc_favourite_add') }}"
		  />]]></replace>
  </modification>
  <modification type="public" template="thread_view" modification_key="fs_amc_review_add_to_favourites" description="fs_amc_review_add_to_favourites" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/<xf:if is="\$thread\.canWatch\(\)">.*?<\/xf:if>/is]]></find>
    <replace><![CDATA[$0

<xf:if is="$xf.visitor.user_id">

	<xf:macro template="bookmark_macros" name="button"
			  arg-content="{$thread.FirstPost}"
			  arg-confirmUrl="{{ link('posts/bookmark', $thread.FirstPost) }}"
			  arg-showText="true"
			  arg-editText="{{ phrase('fs_amc_favourite_edit') }}"
			  arg-addText="{{ phrase('fs_amc_favourite_add') }}"
			  arg-class="button--link itemFavouriteClrBtn"
			  />
</xf:if>]]></replace>
  </modification>
