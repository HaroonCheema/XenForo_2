<?xml version="1.0" encoding="utf-8"?>
<templates>
  <template type="admin" title="fs_team_add_edit" version_id="1000010" version_string="1.0.0 Alpha"><![CDATA[<xf:title>
	<xf:if is="$data.id"> {{phrase('fs_team_edit_record') }} : {$data.title} <xf:breadcrumb href="#">{{
		phrase('fs_team_edit_record') }}</xf:breadcrumb> <xf:else />{{
		phrase('fs_team_new_record') }}
		<xf:breadcrumb href="#">{{phrase('fs_team_new_record') }}</xf:breadcrumb> </xf:if>
</xf:title>
<xf:form
		 action="{{ link('team/save', $data) }}"
		 ajax="true"
		 class="block"
		 data-force-flash-message="true"
		 >
	<div class="block-container">
		<div class="block-body">
			<xf:textboxrow
						   name="title"
						   value="{$data.title}"
						   label="{{phrase('fs_team_title') }}"
						   hint="{{phrase('required')}}"
						   autosize="true"
						   required="required"
						   row="5"
						   />

			<xf:uploadrow name="image" accept=".jpeg,.jpg,.jpe,.png"
						  label="{{ phrase('fs_team_image') }}" hint="{{$data.id ? '' : phrase('required')}}" required="{{$data.id ? '' : 'required'}}"
						  explain="{{ phrase('fs_team_image_placeholder') }}" />

			<xf:if is="{$data.getImgUrl()} && $data.id">
				<xf:formrow label="{{ phrase('fs_select_team_image') }}">
					<img src="{{ base_url($data.getImgUrl()) }}" />
				</xf:formrow>
			</xf:if>
		</div>
		<xf:submitrow submit="" icon="save" />
	</div>
</xf:form>]]></template>
  <template type="admin" title="fs_team_index" version_id="1000010" version_string="1.0.0 Alpha"><![CDATA[<xf:title>{{ phrase('fs_team') }}</xf:title>

<xf:pageaction>
	<xf:button href="{{ link('team/add') }}" icon="add">{{ phrase('fs_team_add_btn') }}</xf:button>
</xf:pageaction>
<xf:form action="{{ link($prefix . '/toggle') }}" class="block" ajax="true">
	<div class="block-outer">
		<xf:macro
				  template="filter_macros"
				  name="quick_filter"
				  arg-key="team"
				  arg-class="block-outer-opposite"
				  />
	</div>

	<div class="block-container">

		<xf:if is="$data is not empty">
			<div class="block-body">
				<xf:datalist data-xf-init="responsive-data-list">

					<xf:macro
							  name="table_list"
							  arg-data="{$data}"
							  />


				</xf:datalist>
				<div class="block-footer">
					<span class="block-footer-counter"
						  >{{ display_totals($totalReturn, $total) }}</span
						>
				</div>

			</div>
			<xf:else />
			<div class="block-body block-row">{{ phrase('no_items_have_been_created_yet') }}</div>

		</xf:if>

	</div>


	<xf:pagenav
				page="{$page}"
				perpage="{$perPage}"
				total="{$total}"
				link="team"
				wrapperclass="block"
				/>
</xf:form>
<xf:macro
		  name="table_list"
		  arg-data="!"
		  >
	<xf:datarow rowtype="header">
		<xf:cell> {{ phrase('fs_team_title') }} </xf:cell>
		<xf:cell class="dataList-cell--min"></xf:cell>
		<xf:cell class="dataList-cell--min"></xf:cell>
	</xf:datarow>
	<xf:foreach loop="{$data}" value="$value">
		<xf:datarow>

			<xf:cell> {$value.title} </xf:cell>

			<xf:action href="{{ link('team/edit', $value) }}" >{{ phrase('edit') }}</xf:action>
			<xf:delete
					   href="{{ link('team/delete', $value) }}"
					   overlay="true"
					   />
		</xf:datarow>
	</xf:foreach>
</xf:macro>]]></template>
  <template type="public" title="fs_team_index" version_id="1000010" version_string="1.0.0 Alpha"><![CDATA[<xf:title> {{ phrase('fs_select_your_favourite_team') }} </xf:title>

<xf:wrap template="account_wrapper" />

<xf:form
		 action="{{ link('team/save') }}"
		 ajax="true"
		 class="block"
		 data-force-flash-message="true"
		 >
	<div class="block-container">
		<div class="block-body">
			<xf:formrow rowtype="input" hint="{{ phrase('required')}}"
						label="{{ phrase('fs_teams_title') }}" explain="{{ phrase('fs_teams_title_placeholder', {'count_teams': $xf.options.fs_teams_total}) }}">

				<ul class="inputList">
					<li><xf:select name="team_ids[]" size="7" multiple="multiple" value="{$xf.visitor.team_ids|default([0])}" required="required">
						<xf:foreach loop="$data" value="$val">
							<xf:option value="{$val.id}">{$val.title}</xf:option>
						</xf:foreach>
						</xf:select></li>
				</ul>
			</xf:formrow>
		</div>
		<xf:submitrow submit="" icon="save" />
	</div>
</xf:form>]]></template>
</templates>
