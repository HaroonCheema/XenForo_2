{
    "template": "widget_pf_related_reviews",
    "description": "fs_who_replied_thread_users_in_related_reviews",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "/<xf:foreach loop=\"\\$forum_threads\" key=\"\\$key\" value=\"\\$thread\" i=\"\\$i\">.*?<\\/xf:foreach>/is",
    "replace": "<xf:foreach loop=\"$forum_threads\" key=\"$key\" value=\"$thread\" i=\"$i\">\n\t<li>\n\t\t<a href=\"{{ link('threads', $thread) }}\" target=\"_blank\"><b>{$thread.Forum.title} - {$thread.title}</b></a>\n\n\t\t<xf:set var=\"$threadUsers\" value=\"{{$thread.getThisThreadUsers()}}\" />\n\t\t<xf:if is=\"{{$threadUsers}}\">\n\t\t\t<ul class=\"listInline listInline--comma\">\n\t\t\t\t<xf:if is=\"{{$threadUsers.currentThread}}\">\n\t\t\t\t\t<xf:trim>\n\t\t\t\t\t\t<li><xf:username user=\"$threadUsers.currentThread.User\" rich=\"true\" class=\"\" style=\"color: {$xf.options.fs_who_replied_thread_starter_color}; font-weight: bold;\"/></li>\n\t\t\t\t\t</xf:trim>\n\t\t\t\t</xf:if>\n\t\t\t\t<xf:foreach loop=\"$threadUsers.users\" value=\"$user\"><xf:trim>\n\t\t\t\t\t<li><xf:username user=\"$user\" rich=\"true\" class=\"\" /></li>\n\t\t\t\t\t</xf:trim></xf:foreach>\n\n\t\t\t\t<a href=\"#\"\n\t\t\t\t   class=\"message-attribution-gadget\"\n\t\t\t\t   data-xf-init=\"share-tooltip\"\n\t\t\t\t   data-href=\"{{ link('posts/share', $thread.FirstPost) }}\"\n\t\t\t\t   rel=\"nofollow\">\n\t\t\t\t\t<xf:fa icon=\"fa-copy\"/>\n\t\t\t\t</a>\n\t\t\t</ul>\n\t\t</xf:if>\n\n\t</li>\n</xf:foreach>"
}