<?xml version="1.0" encoding="utf-8"?>
<templates>
  <template type="public" title="fs_thread_post_replace_links" version_id="1000010" version_string="1.0.0 Alpha"><![CDATA[<xf:title>{{ phrase('fs_replace_links_thread:') }} {$thread.title}</xf:title>
<xf:h1>{{ phrase('fs_replace_links_thread:') }} {$thread.title}</xf:h1>

<xf:breadcrumb source="$thread.getBreadcrumbs()" />

<xf:form action="{{ link('threads/replace-links', $thread) }}" ajax="true" class="block">
	<div class="block-container">
		<div class="block-body">

			<xf:textboxrow name="old_link" label="{{ phrase('fs_thread_replace_old_link') }}"
						   explain="{{ phrase('fs_thread_replace_enter_old_link_here') }}" hint="{{ phrase('required') }}" required="required" />

			<xf:textboxrow name="new_link" label="{{ phrase('fs_thread_replace_new_link') }}"
						   explain="{{ phrase('fs_thread_replace_enter_new_link_here') }}" hint="{{ phrase('required') }}" required="required" />

		</div>
		<xf:submitrow icon="save" sticky="true" />
	</div>
</xf:form>]]></template>
</templates>
