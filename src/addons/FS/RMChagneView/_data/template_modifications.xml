<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="admin" template="xfrm_category_edit" modification_key="fs_rm_xfrm_category_edit_upload" description="fs_rm_xfrm_category_edit_upload" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:textarearow name="description" value="{$category.description}" autosize="true"
				label="{{ phrase('description') }}"
				explain="{{ phrase('you_may_use_html') }}" />]]></find>
    <replace><![CDATA[$0

<xf:uploadrow name="upload" accept=".jpeg,.jpg,.jpe,.png"
			  label="{{ phrase('fs_rm_cat_image') }}" />

<xf:if is="{$category.getCatImage()}">
	<xf:formrow label="{{ phrase('fs_rm_cat_image_disp') }}">
		<img src="{{ base_url($category.getCatImage()) }}" style="width: 150px;"/>
		<br/>
		<xf:button href="{{ link('resource-manager/categories/delete-image', $category) }}" icon="delete" overlay="true" />
	</xf:formrow>
</xf:if>]]></replace>
  </modification>
  <modification type="public" template="xfrm_category_view" modification_key="fs_rm_xfrm_category_view_replace_temp" description="fs_rm_xfrm_category_view_replace_temp" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/<xf:title page="{\$page}">{\$category\.title}<\/xf:title>.*?<xf:widgetpos id="xfrm_category_sidenav" position="sidenav" context-category="{\$category}" \/>/is]]></find>
    <replace><![CDATA[<xf:include template="fs_rm_xfrm_category_view" />]]></replace>
  </modification>
  <modification type="public" template="xfrm_overview" modification_key="fs_rm_replace_temp" description="fs_rm_replace_temp" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/<xf:title page="{\$page}">{{ phrase\('xfrm_resources'\) }}<\/xf:title>.*?<xf:widgetpos id="xfrm_overview_sidenav" position="sidenav" \/>/is]]></find>
    <replace><![CDATA[<xf:include template="fs_xfrm_overview" />]]></replace>
  </modification>
</template_modifications>
