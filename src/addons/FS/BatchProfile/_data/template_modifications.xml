<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="admin" template="fs_usergroup_batch_add_edit" modification_key="fs_profile_batch_add_check_boxs" description="fs_profile_batch_add_check_boxs" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[</ul>]]></find>
    <replace><![CDATA[$0

<xf:checkboxrow>
	<xf:option name="allow_thread" value="1" selected="$data.allow_thread">
		{{ phrase('fs_allow_batch_in_thread') }}
	</xf:option>
</xf:checkboxrow>

<xf:checkboxrow>
	<xf:option name="allow_profile" value="1" selected="$data.allow_profile">
		{{ phrase('fs_allow_batch_in_profile') }}
	</xf:option>
</xf:checkboxrow>]]></replace>
  </modification>
  <modification type="public" template="member_view" modification_key="fs_batch_profile_member_view" description="fs_batch_profile_member_view" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/<div class="memberHeader-content">.*?<\/div>.*?<\/div>.*?<\/div>.*?<\/div>/is]]></find>
    <replace><![CDATA[$0

<xf:if is="$user.getBatchLists() is not empty">
	<div class="gallery">
		<xf:foreach loop="$user.getBatchLists()" value="$batch">
			<xf:if is="$user.isMemberOf($batch.usergroup_ids)">
				<div class="image-wrapper">
					<img src="{{ base_url($batch.img_path,true) }}" alt="{$batch.title}" class="bbImage" loading="lazy" />
				</div>
			</xf:if>
		</xf:foreach>
	</div>
</xf:if>

<xf:css src="fs_batch_profile.less" />]]></replace>
  </modification>
</template_modifications>
