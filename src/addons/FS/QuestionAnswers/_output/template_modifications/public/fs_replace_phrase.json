{
    "template": "forum_post_thread",
    "description": "Replace Phrase 'Post Thread' with 'Submit your question' just on Question Forum",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "<xf:title>{{ phrase('post_thread') }}</xf:title>",
    "replace": "<xf:if is=\"{{$xf.reply.containerKey == 'node-'.$xf.options.fs_questionAnswerForum || $xf.app.request.getRoutePath() == 'esperto/'}}\">\n\t<xf:title>{{ phrase('fs_submit_your_question') }}</xf:title>\n<xf:else />\n\t$0\n</xf:if>"
}