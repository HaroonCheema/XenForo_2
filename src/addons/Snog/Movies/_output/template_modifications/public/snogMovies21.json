{
    "template": "forum_view",
    "description": "Changes post thread button to post movie",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "{{ phrase('post_thread') }}",
    "replace": "<xf:if is=\"$forum.forum_type_id == 'snog_movies_movie'\">\n\t{{ phrase('snog_movies_post_button') }}\n<xf:else />\n\t$0\t\n</xf:if>\n"
}